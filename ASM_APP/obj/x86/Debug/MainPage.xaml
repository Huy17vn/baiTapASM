<Page
    x:Class="ASM_APP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASM_APP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="100,8,100,0">
            <TextBlock Text="Registration" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="MediumSeaGreen" FontSize="25" FontWeight="ExtraLight" Margin="10"/>
            <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"></RowDefinition>
                    <RowDefinition Height="0.5*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='17' x:Name="FirstName" PlaceholderText="First Name" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>
                <TextBlock x:ConnectionId='18' x:Name="firstName" Visibility="Collapsed" Foreground="Red" Grid.Row="1" Grid.Column="0" Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='19' x:Name="LastName" PlaceholderText="Last Name" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5" Grid.Row="0" Grid.Column="1"  Margin="10,0,0,0"/>
                <TextBlock x:ConnectionId='20' x:Name="lastName" Visibility="Collapsed" Foreground="Red" Grid.Row="1" Grid.Column="1" Margin="5,20,0,0"/>
                </Grid>
            <TextBox x:ConnectionId='2' x:Name="Phone" PlaceholderText="Phone Number" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5" />
                <TextBlock x:ConnectionId='3' x:Name="phone" Visibility="Collapsed" Foreground="Red" Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='4' x:Name="Email" PlaceholderText="Email" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5"/>
                <TextBlock x:ConnectionId='5' x:Name="email" Visibility="Collapsed" Foreground="Red" Margin="5,20,0,0"/>
                <PasswordBox x:ConnectionId='6' x:Name="PassWord" PlaceholderText="Password" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5"/>
                <TextBlock x:ConnectionId='7' x:Name="password" Visibility="Collapsed" Foreground="Red" Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='8' x:Name="AvatarUrl" PlaceholderText="AvatarUrl" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5"/>
                <Image x:ConnectionId='9' x:Name="Avatar" Width="150" Height="150" HorizontalAlignment="Left" Margin="0,10,0,0" />
                <Button x:ConnectionId='10' Content="Capture Your Photo" Margin="0,10,0,0"                     />
                <TextBox x:ConnectionId='11' x:Name="Address" PlaceholderText="Address" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5" AcceptsReturn="True" Height= "55"  />
            <TextBox x:ConnectionId='12' x:Name="Introduction" PlaceholderText="Introduction" BorderBrush="MediumSeaGreen" BorderThickness="0,0,0,1.5" AcceptsReturn="True" Height= "55" Margin="0,0,0,30"/>
            <CalendarDatePicker x:ConnectionId='13' x:Name="BirthdayPicker" Header="Birthday"                                         />
            <TextBlock Text="Gender"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:ConnectionId='16' Content="Male" Tag="1"                              />
                <RadioButton Content="Female" Tag="0" />
                <RadioButton Content="Other" Tag="2" IsChecked="True" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='14' x:Name="doSubmit" Content="Register"                       />
                <Button x:ConnectionId='15' x:Name="doReset" Content="Reset"                      />
            </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

